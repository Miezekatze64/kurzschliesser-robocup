If Sensor.ReadRawValue(COLOR_R, 0) = COLOR_BLACK Then
  While Sensor.ReadRawValue(COLOR_R, 0) = COLOR_BLACK
    Motor.movesteer(MOTOR_MOVEMENT, 50, -50, 250, "true")
  EndWhile
ElseIf Sensor.ReadRawValue(COLOR_L, 0) = COLOR_BLACK Then
  While Sensor.ReadRawValue(COLOR_R, 0) = COLOR_BLACK
    Motor.movesteer(MOTOR_MOVEMENT, -50, 50, 250, "true")
  EndWhile
EndIf